{
    "name": "@vigilio/express",
    "private": true,
    "description": "create web apps with @vigilio/express now",
    "scripts": {
        "dev": "vite",
        "serve": "cross-env NODE_ENV=development  ts-node-dev --respawn -r tsconfig-paths/register  app/main.ts",
        "build:serve": "rimraf dist && tsc  --project tsconfig.build.json ",
        "build:dev": "vue-tsc --project ./resources/tsconfig.json && vite build ",
        "start": "cross-env NODE_ENV=production node dist/main.js",
        "test": "vitest",
        "rome:format:server": "rome format  ./app --write",
        "rome:check:server": "rome check ./app",
        "rome:format:client": "rome format  ./resources/ts --write",
        "rome:check:client": "rome check ./resources/ts",
        "rome:format": "pnpm rome:format:server && pnpm rome:format:client",
        "rome:check": "pnpm rome:check:server && pnpm rome:check:client"
    },
    "keywords": [
        "@vigilio/express",
        "@vigilio/express-api"
    ],
    "author": "Vigilio",
    "license": "ISC",
    "dependencies": {
        "@decorators/di": "^2.0.0",
        "@decorators/express": "^2.9.4",
        "@heroicons/vue": "^2.0.18",
        "@vigilio/express-core": "^1.0.35",
        "@vigilio/vue-fetching": "^2.1.4",
        "@vigilio/vue-form": "^1.1.8",
        "@vigilio/vue-table": "^1.1.1",
        "axios-minified": "^1.0.7",
        "bcryptjs": "^2.4.3",
        "connect-flash": "^0.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "formidable": "^3.5.0",
        "mysql2": "^3.5.1",
        "nodemailer": "^6.9.4",
        "passport": "^0.6.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-login": "^0.0.0",
        "pinia": "^2.1.6",
        "pug": "^3.0.2",
        "sequelize": "^6.32.1",
        "sequelize-typescript": "^2.1.5",
        "vue": "^3.3.4",
        "vue-toast-notification": "^3.1.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@rollup/plugin-dynamic-import-vars": "^2.0.4",
        "@types/bcryptjs": "^2.4.2",
        "@types/connect-flash": "^0.0.37",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/formidable": "^3.4.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^20.4.2",
        "@types/nodemailer": "^6.4.9",
        "@types/passport": "^1.0.12",
        "@types/passport-facebook": "^3.0.0",
        "@types/passport-google-oauth20": "^2.0.11",
        "@types/passport-local": "^1.0.35",
        "@types/supertest": "^2.0.12",
        "@vitejs/plugin-vue": "^4.2.3",
        "autoprefixer": "^10.4.14",
        "cross-env": "^7.0.3",
        "module-alias": "^2.2.3",
        "postcss": "^8.4.27",
