include ./cardOne.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="pagina web creado con @vigilio/express")
        link( rel="icon" href=route("/img/logo.png") type="image/x-icon" )
        title=`${page || 'admin'}`
        !=vite
    body(class=" dark:bg-background-dark bg-background-light")
        #teleport
        div( class="flex h-full" ) 
            main( class="relative shadow overflow-hidden min-w-[100px] md:w-[350px] bg-[#041737]  min-h-screen" )
                div(class="absolute -bottom-20 -left-[90px] w-[270px] h-[270px] bg-[#5C4FA1] rounded-full")
                div(class="absolute bottom-[-8rem] left-[2rem] w-[270px] h-[270px] bg-[#3963AD] rounded-full")
                h1(class="py-8 text-center text-2xl uppercase font-bold text-white") 
                    a(href=route("/")) LOGO
                div(class="flex items-center justify-center gap-2 bg-[#3963AD] mx-4 rounded-md py-3")
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6  text-white h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
                    </svg>
                    a(href=route("/admin") class="text-white capitalize hidden md:block")=page
                div( class="p-2 md:p-6 relative z-10" )
                    div
                        p(class="text-white capitalize p-2 text-sm text-center md:text-start md:text-base") Managment
                        each nav in adminRouters
                            div(class="vue-app flex flex-col items-center   justify-center md:justify-between ")
                                chevron-aside-admin( :=JSON.stringify(nav) )
                                    !=nav.ico("w-6 h-6")
                    div(class="h-[1px] bg-[#3963AD] my-6")
                  
            div( class="w-full" )
                header(class="md:px-6 px-3 md:py-4  py-2 items-center flex justify-between bg-background-light shadow dark:bg-background-dark")
                    h1(class="text-2xl font-bold capitalize") #{page}
                    .vue-app
                        profile-header-admin( :user=JSON.stringify($user) )
                section( class="bg-paper-light p-3 md:p-6 min-h-[calc(100vh-80px)] dark:bg-paper-dark" )   
                    block content 